<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles/style.css">
  </head>

  <body>
    <div class="container">
      <h1>Node module numéro 1</h1>

      <!--Formulaire-->
      <div class="form-card">
        <!--Affichage des erreurs de validation-->
        <% if (errors.length> 0) { %>
        <div class="errors">
          <ul>
            <% errors.forEach(error=> { %>
            <li><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
        <% } %>

        <form method="POST" action="/message">
          <div class="form-group">
            <label for="titre">Titre du message *</label>
            <input type="text" id="titre" name="titre" required />
          </div>

          <div class="form-group">
            <label for="corps">Corps du message *</label>
            <textarea id="corps" name="corps" required></textarea>
          </div>

          <div class="form-group">
            <label for="nom">Votre nom *</label>
            <input type="text" id="nom" name="nom" required />
          </div>

          <button type="submit">Envoyer le message</button>
        </form>
      </div>

      <!--Liste des messages-->
      <div class="messages-list">
        <% if (messages.length===0) { %>
        <div class="no-messages">
          Aucun message pour le moment. Soyez le premier à poster !
        </div>
        <% } else { %> <% messages.forEach(message=> { %>
        <div class="message-card">
          <div class="message-header">
            <div class="message-titre"><%= message.titre %></div>
            <div class="message-date"><%= message.date %></div>
          </div>
          <div class="message-corps"><%= message.corps %></div>
          <div class="message-nom">— <%= message.nom %></div>
        </div>
        <% }); %> <% } %>
      </div>

    </div>
  </body>
</html>
